<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>Simple Sale. Sales made simple!
        </title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        @Styles.Render("~/Content/css")
         @Styles.Render("~/Content/themes/base/css")
        @Scripts.Render("~/bundles/modernizr")

    </head>
    <body>
        <header>
            

            <div class="content-wrapper">    
  
              <div class="float-left">
                    <div class="site-title">
                      <span>  Simple Sale </span>
                     </div>
                </div>
                <div class="float-right">
                    <section id="login">
                        @Html.Partial("_LoginPartial")
                    </section>
                    
                </div>
            </div>
        </header>
        <div id="body">
            @RenderSection("featured", required: false)
            <section class="content-wrapper main-content clear-fix">
                @RenderBody()
            </section>
        </div>
        <footer>
           
            <div class="content-wrapper">
                <div class="float-left">
                    <br />
                     <div>
                              <span> <button>Store Settings</button></span> <span><button>Account Settings</button></span> 

            </div>
                    <p>&copy; @DateTime.Now.Year - Simple Sale... Exploring Knockout by Logan Head</p>
                </div>
            </div>
        </footer>
           @Scripts.Render("~/bundles/knockout")
           @Scripts.Render("~/bundles/jquery")
          @Scripts.Render("~/bundles/jqueryui")

      
    @RenderSection("scripts", required: false)
    </body>
</html>
